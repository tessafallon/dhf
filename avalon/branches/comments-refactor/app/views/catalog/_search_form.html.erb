 <div class="span12">
  <%= form_tag catalog_index_path, :method => :get, :class => 'search-query-form form-search' do %>
    <%= search_as_hidden_fields(:omit_keys => [:q, :search_field, :qt, :page]).html_safe %> 

	<%= hidden_field_tag "search_field", "all_fields" %>
    <div>
      <%= text_field_tag :q, params[:q], class: "search_q q", 
        id: "appendedInputButtons" %>
      <button type="submit" class="btn btn-primary">
        <span class="submit-search-text">Search</span>
        <i class="icon-search icon-white"></i>
      </button>
    </div>
  <% end %>
</div>
