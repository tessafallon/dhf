  	<fieldset id='required_metadata'>
   		<legend>Basic Metadata</legend>

<%= form_tag video_path(asset_id: params[:id]), 
  :method => "PUT", 
  :class => "form-horizontal", 
  id: 'publication_history_form' do -%>
  <%= hidden_field_tag 'pid', @document_fedora.pid %>
  <div id="title-field" class="control-group">
    <div class="control-label">
      <%= label_tag :title, "Title" %>
      <p class="information">Required</p>
    </div>
    <div class="controls">
      <%= text_field_tag :title, @document_fedora.descMetadata.title, required: true %>
    </div>
  </div>

  <div id="creator-field" class="control-group">
    <div class="control-label">
      <%= label_tag :creator, "Creator" %>
      <p class="information">Required</p>
    </div>
    <div class="controls">
      <%= text_field_tag :creator, @document_fedora.descMetadata.creator, required: true %>
    </div>
  </div>

  <div id="createdon-field" class="control-group">
    <div class="control-label">
      <%= label_tag :created_on, "Created on" %>
      <p class="information">Required</p>
    </div>
    <div class="controls">
      <%= text_field_tag :created_on, @document_fedora.descMetadata.created_on, required: true %>
    </div>
  </div>

  <div class="all-steps-actions control-group">
    <div class="controls">
      <button id="all_save_continue" class="btn" name="all_save_continue">Save and Continue Editing</button>
      <button id="all_save_finish" class="btn" name="all_save_finish">Save and Finish</button>
    </div>
  </div>
<%- end -%>
</fieldset>
