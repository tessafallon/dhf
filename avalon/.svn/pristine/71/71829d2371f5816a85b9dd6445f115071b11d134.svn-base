/**
 * Custom branding for Avalon to override Bootstrap, Hydra, and Blacklight
 * defaults. This should be included at the top of the application.scss file
 * so it is preferred over the defaults. */
$sansFontFamily: Arial, Helvetica, sans-serif;

/**
 * If you want to override the default color scheme do so here
 *
 * Bootstrap provides settings for
 * blue
 * red
 * green
 * yellow
 * orange
 * pink
 * purple
 * white
 * black
 * gray
 */
$green: rgb(128, 165, 144);
$greenBG: scale-color($green, $saturation: -40%, $lightness: 60%);
$white: rgb(255, 255, 255);
$orange: rgb(42, 84, 69);
$gray: rgb(51,51,51);

/* Links */

$linkColor: #2A5459;

/* Alerts */

$warningText: #333;
$warningBackground: #e9e9e9;

$successText: #333;
$successLink: rgb(250, 250, 250);
$successBackground: $greenBG;

$infoText: #333;
$infoBackground: #e9e9e9;

/* Header */

$headerBackgroundColor: #e9e9e9;
$headerTextColor: $white;
$loginTextColor: $gray;
$loginLinkColor: #2A5459;
$loginLinkBackgroundColor: #FBB040;

/* Sidenav */

$sidenavHeaderBackgroundColor: $greenBG;

/* Search Facets */

$constraint_bg_color: $greenBG;
$constraint_border_color: scale-color($greenBG, $lightness: -20%);