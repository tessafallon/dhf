<div class="page-header row-fluid">
  <div class="offset3 span7">
  <% if params[:q] %>
   <h2>Search results for keywords "<em><%= params[:q] %></em>"</h2>
  <% else %>
   <h2>Collection browse</h2>
 <% end %>
 </div>
</div>

<div class="row-fluid">
  <div class="span3" id="left-column">
   <%= render 'facets' %>
  </div>
  
  <div id="main_body" class="span9">
      <div class="span12">
        <% unless @document_list.empty? %>
        <table class="table table-striped table-hover">
          <tbody>
            <%= render partial: 'search_result', collection: @document_list, as: :item %>
          </tbody>      
        </table>
        <% else %>
          <strong>No results were found. Try a different search term.</strong>
        <% end %>
      </div>
  </div>
</div>

<% content_for :title do %>
  <% unless params[:q] %>
    Browse collection 
  <% else %>
    Search results for "<%= params[:q] %>"
  <% end %>
<% end %>
