
<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <ul class="nav nav-pills">
        <li class="span2"><%= link_to 'Home', root_url %></li>
        <li class="divider-vertical"></li>
        <li class="span2">
          <% unless current_user.nil? %>
              <%= link_to 'Add new item', new_video_path %>
          <% else %>
            <%= link_to 'Add new item', new_user_session_path %>
          <% end %>
        </li>
        <li class="divider-vertical"></li>
        <li class="span2"><%= link_to 'Browse items', search_index_path %></li>
      </ul>
      <%= form_tag search_index_path, 
         method: 'post',  
         id: "search_form",
         class: "navbar-search pull-right" do %>
         <%= text_field_tag :q, params[:q], placeholder: 'Search' %>
       <% end %>
    </div>
  </div>
</div>
