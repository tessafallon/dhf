<%= render :partial=>"/add_assets_links" %>

<nav id="util_links">
<% if current_user %>
    <%= link_to current_user.to_s, edit_user_registration_path %>

    <% if current_user.can_be_superuser? %>
      <% if current_user.is_being_superuser?(session) %>
        <%= link_to "Regular view", superuser_path %>
      <% else %>
        <%= link_to "Administrative view", superuser_path %>
      <% end %>
    <% end %>
    
    <%= link_to "Log Out", destroy_user_session_path %>
<% else -%>
    <%= link_to "Log in", new_user_session_path %>
<% end -%>
</nav>